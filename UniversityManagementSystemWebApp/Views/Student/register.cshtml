@using UniversityManagementSystemWebApp.Models
@{
    List<Department> departments = ViewBag.Departments;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h4 style="font-size: 30pt; color: green; padding-left: 170px">University Management System</h4>
    </section>
    <!-- Main content -->
    <section class="content">
       
        <div class="box-body">
            <body>
                <h4 style="font-size: 18pt; color: green">Register Student</h4>

                <div style="border: 1px solid black; width: 600px;">
                    <div>
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    @if (ViewBag.Messages != null)
                                    {
                                        <div class="alert alert-success" role="alert">
                                            @ViewBag.Messages
                                            @*@Url.Action("ViewRegistrationInfo", "Student")"*@
                                        </div>

                                    }
                                    @*action="@Url.Action("ViewRegistrationInfo", "Student")"*@<form method="POST" id="registerStudent">
                                    <br/>
                                        <div class="form-group">
                                            <label for="Name">Name</label>
                                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Name">
                                        </div>
                                        <div class="form-group">
                                            <label for="Email">Email</label>
                                            <input type="text" class="form-control" id="Email" name="Email" placeholder="Email">
                                        </div>

                                        <div class="form-group">
                                            <label for="ContactNo">Contact No</label>
                                            <input type="text" class="form-control" id="ContactNo" name="ContactNo" placeholder="ContactNo">
                                        </div>
                                        <div class="form-group">
                                            @*@using (Html.BeginForm("Index", "Student", FormMethod.Post))
                                        {
                                            <label>Date &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</label>
                                            @Html.TextBox("SelectedDate", "", new { @readonly = "readonly" })
                                        }*@

                                            <label>Date &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</label>
                                            @*@Html.TextBox("SelectedDate", DateTime.Now.ToString("MM/dd/yyyy"), new { @readonly = "readonly" })*@
                                            <input type="text" id="DateEntered" name="DateEntered" data-format="dd/MM/yyyy" placeholder=@DateTime.Now.ToString("dd/MM/yyyy") />

                                        </div>
                                        <div class="form-group">
                                            <label for="Address">Address</label>
                                            <input type="text" class="form-control" id="Address" name="Address" placeholder="Address">
                                        </div>


                                        <div class="form-group">
                                            <label for="DepartmentId">Department</label>
                                            <select id="DepartmentId" name="DepartmentId" class="form-control">
                                                <option value="">-Select Category-</option>
                                                @foreach (Department department in departments)
                                                {
                                                    <option value="@department.Id">@department.Name</option>
                                                }
                                            </select>
                                        </div>




                                        <br />
                                        <br />

                                        <button type="submit" value="" class="btn btn-default">Register</button>

                                        <br />
                                        <br />
                                        @Html.ActionLink("Back to Home page", "Index", "Home", null, new { })
                                        <br />
                                        <br />


                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
                    <script src="~/Scripts/jquery.validate.min.js"></script>
                    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

                    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js'></script>
                    <link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css'
                          media="screen" />
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>


                    <script>

                        // jQuery code to show the working of this method
                        $(document).ready(function () {
                            $("#registerStudent").submit(function () {
                                @*alert("@Url.Action("ViewRegistrationInfo", "Student")");*@
                                @*window.location.href = '@Url.Action("ViewRegistrationInfo", "Student")';*@
                                @*window.location.href = '@Html.Raw(Url.Action("ViewRegistrationInfo","Student" ))';*@
                            });
                        });
                    </script>

                    <script>

                        $(function () {
                            $('#DateEntered').datepicker({
                                changeMonth: true,
                                changeYear: true,
                                format: "dd/mm/yyyy",
                                language: "tr"
                            });




                            $("#registerStudent").validate({
                                rules: {
                                    'Name': {
                                        required: true
                                    },

                                    'Email': {
                                        required: true,
                                        email: true
                                    },
                                    'ContactNo': {
                                        required: true
                                    },

                                    'Date': {
                                        required: true
                                    },
                                    'Address': {
                                        required: true
                                    },
                                    'DepartmentId': {
                                        required: true

                                    },
                                    messages: {
                                        'Name': 'Please enter Name',
                                        'Description': 'Please enter Description',
                                        'Department': 'Please enter Department',
                                        'Semester': 'Please enter Semester',
                                        'Credit': {
                                            required: 'Please provide a Code',
                                            min: 'Your Credit must be at least 0.5',
                                            max: 'Your Code must be at Highest 5.0'
                                        },
                                        'Code': {
                                            required: 'Please provide a Code',
                                            minlength: 'Your Code must be at least 5 characters long'
                                        }
                                    }
                                }

                            });

                        });


                    </script>





                </div>

            </body>
        </div>
    </section>
    <!-- /.content -->
</div>

