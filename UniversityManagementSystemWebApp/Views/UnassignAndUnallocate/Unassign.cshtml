@using UniversityManagementSystemWebApp.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h4 style="font-size: 30pt; color: green; padding-left: 170px">University Management System</h4>

        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Examples</a></li>
                <li class="active">Blank page</li>
            </ol>*@
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        @*<div class="box-header with-border">
                <h3 class="box-title"></h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>*@
        <div class="box-body">
            <body>
                <div style="padding-left: 150px; padding-top: 80px;">
                    <div style="border: 1px solid black; width: 600px;">
                        <div>
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <br />
                                        @if (ViewBag.Message != null)
                                        {
                                            <div class="alert alert-success" role="alert">
                                                @ViewBag.Message
                                            </div>

                                        }

                                        <h4 style="font-size: 25pt; padding: 0 0 0 90px; font-style: italic; text-decoration: underline; color: green">Unassign All Course</h4>
                                        <form method="POST" id="unAssignCourse" style="padding: 50px 0 0 70px">

                                            <div>
                                                <button id="unAssignButton" type="submit" class="btn btn-default" style="width: 400px; text-align: center; color: red; font-size: 15pt;">Unassign All Course</button>
                                            </div>

                                        </form>
                                        <br /><br />
                                        <div style="padding-left: 20px">
                                            @Html.ActionLink("Back to Home page", "Index", "Home", null, new { })<br /><br /><br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
                    <script src="~/Scripts/jquery.validate.min.js"></script>
                    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
                    <script type="text/javascript">
                        $("body").on("submit", "#unAssignCourse", function () {
                            return confirm("Are you sure to Unassign All Course?");
                        });
                    </script>
                    @if (ViewBag.Messages != null)
                    {
                        <script type="text/javascript">
                            window.onload = function () {
                                alert('@ViewBag.Messages');
                            };
                        </script>
                    }
                    <script>
                        $(function () {
                            $("#Department").change(function () {

                                var id = $(this).val();

                                $("#TeacherId").empty();

                                $.get("TeacherBind", { departmentId: id }, function (data) {

                                    var v = "<option>--Select--</option>";

                                    $.each(data, function (i, v1) {

                                        v += "<option value=" + v1.Value + ">" + v1.Text + "</option>";

                                    });

                                    $("#TeacherId").html(v);

                                });

                            });


                            $("#Department").change(function () {

                                var id = $(this).val();

                                $("#CourseId").empty();

                                $.get("CourseBind", { departmentId: id }, function (data) {

                                    var v = "<option>---Select---</option>";

                                    $.each(data, function (i, v1) {

                                        v += "<option value=" + v1.Value + ">" + v1.Text + "</option>";


                                    });
                                    $("#CourseId").html(v);

                                });
                            });

                            $("#CourseId").change(function () {

                                var id = $(this).val();

                                $("#Name").empty();

                                $.get("CourseNameBind", { courseId: id }, function (data) {

                                    //$("#StudentName").value(data);
                                    $("#Name").val(data);

                                });
                            });
                            $("#CourseId").change(function () {

                                var id = $(this).val();

                                $("#Credit").empty();

                                $.get("CourseCreditBind", { courseId: id }, function (data) {

                                    //$("#StudentName").value(data);
                                    $("#Credit").val(data);

                                });
                            });

                            $("#TeacherId").change(function () {

                                var id = $(this).val();

                                $("#RemainingCredit").empty();

                                $.get("RemainingCreditBind", { teacherId: id }, function (data) {

                                    //$("#StudentName").value(data);
                                    $("#RemainingCredit").val(data);

                                });
                            });


                            $("#TeacherId").change(function () {

                                var id = $(this).val();

                                $("#CreditToBeTaken").empty();

                                $.get("CreditToBeTakenBind", { teacherId: id }, function (data) {

                                    //$("#StudentName").value(data);
                                    $("#CreditToBeTaken").val(data);

                                });
                            });


                            $("#assignCourse").validate({
                                rules: {
                                    'Name': {
                                        required: true
                                    },

                                    'Code': {
                                        required: true,
                                        minlength: 5
                                    },
                                    'Description': {
                                        required: true
                                    },

                                    'DepartmentId': {
                                        required: true
                                    },
                                    'SemesterId': {
                                        required: true
                                    },
                                    'Credit': {
                                        required: true

                                    },
                                    messages: {
                                        'Name': 'Please enter Name',
                                        'Description': 'Please enter Description',
                                        'Department': 'Please enter Department',
                                        'Semester': 'Please enter Semester',
                                        'Credit': {
                                            required: 'Please provide a Code'

                                        },
                                        'Code': {
                                            required: 'Please provide a Code',
                                            minlength: 'Your Code must be at least 5 characters long'
                                        }
                                    }
                                }
                            });

                        });

                    </script>

                </div>



</body>
        </div>
        
    </section>
    <!-- /.content -->
</div>