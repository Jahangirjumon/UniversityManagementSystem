        <div class="box-body">
            <body>
            <div style="padding-left: 150px; padding-top: 80px;">
                <div style="border: 1px solid black; width: 600px">
                    <div>
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-6">
                                    <br />
                                    @if (ViewBag.Message != null)
                                    {
                                        <div class="alert alert-success" role="alert">
                                            @ViewBag.Message
                                        </div>

                                    }

                                    <h4 style="font-size: 25pt; padding: 0 0 0 90px; font-style: italic; text-decoration: underline; color: green">Unallocate All Classroom</h4>
                                    <form method="POST" id="unAssignCourse" style="padding: 50px 0 0 70px">

                                        <div>
                                            <button id="unAssignButton" type="submit" class="btn btn-default" style="width: 400px; text-align: center; color: red; font-size: 15pt;">Unallocate All Classroom</button>
                                        </div>

                                    </form>
                                    <br /><br />
                                    <div style="padding-left: 20px">
                                        @Html.ActionLink("Back to Home page", "Index", "Home", null, new { })<br /><br /><br />
                                </div>
