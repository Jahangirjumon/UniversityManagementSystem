                    <script>
            $(function () {
                $("#selectedRegistartionNo").change(function () {

                    var id = $(this).val();

                    $("#StudentName").empty();

                    $.get("NameBind", { studentId: id }, function (data) {

                        //$("#StudentName").value(data);
                        $("#StudentName").val(data);
                    });
                });



                $("body").on("change", "#selectedRegistartionNo", function () {

                    var id = $(this).val();

