@using UniversityManagementSystemWebApp.Models

@{
    List<Designation> designations = ViewBag.Designations;
    List<Department> departments = ViewBag.Departments;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h4 style="font-size: 30pt; color: green; padding-left: 170px">University Management System</h4>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box-body">
            <body>
                <h4 style="font-size: 18pt; color: green">Save Teacher</h4>

            <div style="border: 1px solid black; width: 600px;">
                <div>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @ViewBag.Message
                                    </div>

                                }
                                <form method="POST" id="saveTeacher">
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="Address">Address</label>
                                        <input type="text" class="form-control" id="Address" name="Address" placeholder="Address">
                                    </div>
                                    <div class="form-group">
                                        <label for="Email">Email</label>
                                        <input type="text" class="form-control" id="Email" name="Email" placeholder="Email">
                                    </div>

                                    <div class="form-group">
                                        <label for="ContactNo">Contact No</label>
                                        <input type="text" class="form-control" id="ContactNo" name="ContactNo" placeholder="ContactNo">
                                    </div>

                                    <div class="form-group">
                                        <label for="DesignationId">Designation</label>
                                        <select id="DesignationId" name="DesignationId" class="form-control">
                                            <option value="">-Select Designation-</option>
                                            @foreach (Designation designation in designations)
                                            {
                                                <option value="@designation.Id">@designation.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="DepartmentId">Department</label>
                                        <select id="DepartmentId" name="DepartmentId" class="form-control">
                                            <option value="">-Select Category-</option>
                                            @foreach (Department department in departments)
                                            {
                                                <option value="@department.Id">@department.Name</option>
                                            }
                                        </select>
                                    </div>


                                    <div class="form-group">
                                        <label for="CreditToBeTaken">Credit To Be Taken</label>
                                        <input type="text" class="form-control" id="CreditToBeTaken" name="CreditToBeTaken" placeholder="CreditToBeTaken">
                                    </div>


                                    <button type="submit" class="btn btn-default">Save</button>
                                </form>
                                <br/><br/>
                                @Html.ActionLink("Back to Home page", "Index", "Home", null, new {})
                            </div>
                        </div>
                    </div>
                </div>
                <script src="~/Scripts/jquery-3.4.1.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                <script>
                    $(function() {
                        $("#saveTeacher").validate({
                            rules: {
                                'Name': {
                                    required: true
                                },

                                'Email': {
                                    required: true,
                                    email: true
                                },
                                'DesignationId': {
                                    required: true
                                },

                                'DepartmentId': {
                                    required: true
                                },
                                'ContactNo': {
                                    required: true
                                },
                                'CreditToBeTaken': {
                                    required: true,
                                    min: 1
                                },
                                messages: {
                                    'Name': 'Please enter Name',
                                    'DesignationId': 'Please enter Designation',
                                    'Department': 'Please enter Department',
                                    'Semester': 'Please enter Semester',
                                    'CreditToBeTaken': {
                                        required: 'Please provide a Credit to be Taken',
                                        min: 'Must enter positive value'
                                    },
                                    'Email': {
                                        required: 'Please provide a Code',
                                        email: 'Please input email in Coreect From'
                                    }
                                }
                            }
                        });

                    });
                </script>


            </div>
            </body>
        </div>
    </section>
    <!-- /.content -->
</div>
