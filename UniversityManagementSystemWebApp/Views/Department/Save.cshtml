
@{
    Layout = null;
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <br/><br />
        <h4 style="font-size: 30pt; color: green; padding-left: 170px">University Management System</h4><br/>

        <ol class="breadcrumb" style="padding-top: 50px;">
           




        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box-header with-border">
            <h3 class="box-title"></h3>
            <div class="box-tools pull-right">

            </div>
        </div>
        <div class="box-body">

            <body>
            <div style="padding-left: 80px; padding-top: 10px;">
                <h4 style="font-size: 25pt; padding: 0 0 0 140px; font-style: italic; text-decoration: underline; color: green">Save Department</h4><br /><br />

                <div style="border: 1px solid black; width: 600px;">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @ViewBag.Message
                                    </div>

                                }
                                <form method="POST" id="saveDepartment">
                                    <br/><br/>
                                    <div class="form-group">
                                        <label for="Name">Code</label>
                                        <input type="text" class="form-control" id="Code" name="Code" placeholder="Code">
                                    </div>
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Name">
                                    </div>
                                    <button type="submit" class="btn btn-default">Save</button>
                                </form>
                                <br/><br/>
                                @Html.ActionLink("Back to Home page", "Index", "Home", null, new {})<br/><br/>
                            </div>
                        </div>
                    </div>
                </div>
                <script src="~/Scripts/jquery-3.4.1.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                <script>
                    $(function() {
                        $("#saveDepartment").validate({
                            rules: {
                                'Name': {
                                    required: true
                                },

                                'Code': {
                                    required: true,
                                    minlength: 2,
                                    maxlength: 7
                                },

                                messages: {
                                    'Name': 'Please enter Name',

                                    'Code': {
                                        required: 'Please provide a Code',
                                        minlength: 'Your Code must be at least 2 characters long',
                                        maxlength: 'Your Code must be at highest 7 characters long'
                                    }
                                }
                            }
                        });

                    });
                </script>
                @*<script>
                            var hasError = false;
                            var code = $('#Code').val();
                            if (code.length > 0) {
                                var codeTest = new RegExp('(?=.{7,})');
                                if (!codeTest.test(code)) {
                                    hasError = true;
                                }
                            }

                        </script>*@

            </div>
            </body>
        </div>
    </section>
    <!-- /.content -->
</div>

